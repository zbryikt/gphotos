@import 'vars'
@import 'basic'

#slideshow
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 10
  background-color: rgba(0,0,0,0.8)
  background-position: center center
  background-size: contain
  background-repeat: no-repeat
  display: none
  &.active
    display: block
#slideshow .ctrl
  position: absolute
  right: 20px
  bottom: 20px
  padding: 0 8px
  border-radius: 2px
  .plus
    box-shadow: 0 4px 4px rgba(0,0,0,0.5)
    width: 56px
    height: 56px
    line-height: 56px
#slideshow .closebtn
  position: absolute
  top: 16px
  line-height: 51px
  font-size: 32px 
  z-index: index(order, 'menu')
  width: 56px
  height: 56px
  border-radius: 50%
  right: 16px
  box-shadow: 0 4px 4px rgba(0,0,0,0.1)
  text-align: center
  cursor: pointer
  background: #fff

#revote
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: index(order, 'revote')
  background: rgba(0,0,0,0.6)
  padding: 24px

#revote .ib
  background: #fff
  position: relative
  width: 100%
  height: 100%
  box-shadow: 0 4px 4px rgba(0,0,0,0.5)
  overflow: hidden
  @media (min-width: 640px)
    max-width: 80%
    max-height: 80%
    margin: auto

#revote .content
  width: 100%
  padding: 24px
  max-height: 100%

#revote .title
  font-weight: bold
  font-size: 20px
  text-align: center
  margin-bottom: 24px
  color: #000

#revote .photo-ctrl
  position: absolute
  top: 84px
  left: 0
  width: 100%
  height: 100%
  padding: 0 0 156px

#revote .photo
  width: 30%
  height: 100%
  margin: 0 1.66666666%
  display: inline-block
  background-position: center center
  background-repeat: no-repeat
  background-size: contain
  position: relative
  .x-btn
    width: 56px
    height: 56px
    position: absolute
    top: 50%
    left: 50%
    margin: -28px -28px
    font-size: 24px
    text-align: center
    line-height: 56px
    background: rgba(255,255,255,0.5)
    box-shadow: 0 4px 4px rgba(0,0,0,0.3)
    border-radius: 50%
    cursor: pointer

#revote .ctrl
  position: absolute
  right: 0px
  bottom: 0px
  height: 52px
  padding: 8px
  text-align: right
  width: 100%
  background: #fff
  .x-btn
    display: inline-block
    color: #2196f3
    padding: 8px
    font-size: 18px
    line-height: 20px
    font-weight: bold
    cursor: pointer

.cell3
  width: 30%
  text-align: center
  position: absolute
  top: 15%
  height: 70%
  @media (max-width: 800px)
    height: auto
    top: 25%
  left: 0
  img
    max-width: 100%
    max-height: 100%
  .btn
    background: #fff
    color: #404040
    margin-top: -20px
@media (max-width: 800px)
  #revote .btn.btn-default
    width: 80%
    margin-left: -40%

#revote .btn
  position: absolute
  bottom: 10px
  left: 50%
  margin-left: -100px
  width: 200px
  background: #fff
  color: #404040
