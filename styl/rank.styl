@import 'vars'
@import 'basic'

#root.rank
  text-align: center

#ranklist
  margin-top: 10%

.x-card.rank
  width: 19%
  text-align: left
  float: none
  display: inline-block
.x-card.rank .ctrl
  height: 52px
  .plus, .icon, .num
    height: 36px
    line-height: 36px
    font-size: 18px
  .icon
    width: 30px
    margin-right: 0
  .num:last-of-type
    margin-right: 16px

@media(max-width: 800px)
  #ranklist
    margin-top: 0
  .x-card.rank
    width: 30%
  .x-card.rank .ctrl .num:last-of-type
    margin-right: 8px
    margin-left: 0
