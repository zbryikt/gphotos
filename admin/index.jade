doctype html
//- basic libraries: jquery(1.10.2), d3js(3.3.11), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
//-                  fontawesome(4.4.0), reactjs(0.14.0)
- var use = { cdn: false, og: false, favicon: true }
- var lib = { jquery: false, d3js: false, angular: true, bootstrap: true, semantic: false, fontawesome: true, reactjs: false }
- var assets = "/assets"
- var thumbnail = "thumbnail.png"
- var favicon = "thumbnail.png"
html(lang="en")
  head(prefix="og: http://ogp.me/ns#")
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js")
    // libraries
    include /library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="/index.css")
    script(src="https://cdn.firebase.com/js/client/2.2.4/firebase.js")
    script(src="https://cdn.firebase.com/libs/angularfire/1.1.3/angularfire.min.js")
    script(type="text/javascript",src="#{assets}/isotope/2.0.0/isotope.pkgd.min.js")
    script(src="https://apis.google.com/js/client.js")
    script(type="text/javascript",src="/assets/limby-resize/0.0.8/resize.js")
    script(type="text/javascript",src="/assets/bluebird/3.1.1/bluebird.min.js")
    script(type="text/javascript",src="/admin/storage.js")
    script(type="text/javascript",src="/index.js")
    script(type="text/javascript",src="/admin/index.js")
  body(ng-app="main",ng-controller="admin")
    #init(style="background:url(/img/loading.gif) center center no-repeat #fff;width:100%;height:100%;position:fixed;top:0;left:0;z-index:999",ng-class="{'dim':backend.inited && inited}")
      #hint 記得允許彈出式視窗 #[i.fa.fa-arrow-up]
    #root.admin(style="margin:20px")
      br
      h2.text-center 照片上傳後台
      hr
      .g-signin2(data-onsuccess="onSignIn")
      .row
        .col-sm-6
          .panel.panel-default: .panel-body
            .row
              .col-sm-4
                .form-group
                  label 設定開始時間
                  br
                  .btn.btn-default(ng-disabled="start",ng-click="vote.getstart()") 現在
                  span(style="display:inline-block;padding:10px") {{vote.start|formatdate}}
              .col-sm-8
                .form-group
                  label 設定投票長度 ( 分鐘 )
                  .input-group
                    input.form-control(type="text",placeholder="例如: 120",ng-model="vote.dur")
                    span.input-group-btn
                     .btn.btn-default(ng-click="vote.update()") 設定
        .col-sm-6
          #upload-input
            input#files(type="file",name="",multiple)
            .layer 點我上傳檔案
      hr
      .file(ng-repeat="(key,item) in upload.progress",ng-attr-style="background-image:url({{item.img}});background-size:{{(item.resized && 'cover') || 'initial'}}")
        .progress(ng-class="{'dim':item.progress>=item.size}")
          .progress-bar(ng-attr-style="width:{{(100 * (item.progress / item.size)) || 0}}%")
        i.glyphicon.glyphicon-ok(ng-class="{'active':item.progress >= item.size}")
      br
      hr
      h2.text-center 照片前五名
      .rank(ng-controller="rank")
        #menu-backtop(ng-click="backhome()") #[i.fa.fa-angle-left]
        #ranklist
          .x-card.rank(ng-repeat="photo in stream|orderBy:'-'",
          ng-attr-data-order="{{photo.order}}"): .ib
            div: img(ng-attr-src="{{photo.url}}",ng-click="full.set(photo)")
            .ctrl
              .num {{$index|rank}}
              .pull-right
                .icon #[i.fa.fa-heart]
                .num {{photo.like || {}|count}}

      br
      hr
      h2.text-center 刪除照片區
      #layout(ng-controller="main")
        .x-card(ng-repeat="photo in backend.stream|orderBy:'-'",
        ng-attr-data-order="{{photo.order}}"): .ib
          div: img(ng-attr-src="{{photo.url}}",ng-click="full.set(photo)",isotope)
          .ctrl
            .plus.pull-right(ng-click="trash(photo)"): i.fa.fa-trash
