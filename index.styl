@import 'styl/vars'
@import 'styl/basic'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  color: #404040
  font-family: Roboto,Helvetica,Arial,sans-serif 
  -webkit-font-smoothing: antialiased

#root
  position: relative
  z-index: index(order, 'base')
  width: 100%
  padding: 0

#layout
  width: 95%
  margin: 10px 2.5%

#init
  transition(all 0.3s ease-in-out)
  opacity: 1
#init.dim
  z-index: 0!important
  opacity: 0

.iso
  transition(opacity 1s)
  opacity: 0
.iso-show
  opacity: 1

#upload-input
  display: block
  width: 100%
  height: 112px
  position: relative
  cursor: pointer
  input#files
    display: block
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    z-index: 2
    opacity: 0.01
    cursor: pointer
  .layer
    display: block
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    z-index: 1
    font-size: 60px
    text-align: center
    line-height: 100px
    color: #999
    border: 1px dashed #ccc
    border-radius: 5px
    cursor: pointer

#counter
  top: 10px
  right: 100px
  width: 160px

.prj-row
  width: 100%
  position: absolute
  top: 0
  left: 0
  .prj-cell
    position absolute
    width: 20%
  img
    width: 98%
    margin: 2%
  .count.btn.btn-fab
    position: absolute
    bottom: 10px
    left: 50%
    margin-left: -45px


@import 'styl/admin'
@import 'styl/menu'
@import 'styl/card'
@import 'styl/popup'
@import 'styl/rank'
