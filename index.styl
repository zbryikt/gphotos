.count
  //position: absolute
  width: 90px
  bottom: 10px
  //left: 10px
  margin: 0
  border-radius: 5px
  opacity: 1!important
  background: #fff!important
  box-shadow: 0 1px 1px rgba(0,0,0,0.2)
  border: 1px solid #ccc
  font: normal 13px Roboto,arial,sans-serif
  -webkit-font-smoothing: antialiased
  font-weight: bold
  font-size: 16px
  line-height: 30px
  color: #555
  height: 30px
  line-height: 30px
  text-align: center
  overflow: visible
  i.fa.fa-heart, i.fa.fa-check
    line-height: 30px
    float: right
    font-size: 14px
    margin-right: 6px
  i.fa.fa-heart
    color: #ccc
  i.fa.fa-check
    color: #f00
    display:none
  &.active
    color: #f00
    i.fa.fa-heart
      display: none
    i.fa.fa-check
      display: inline-block

.iso
  transition(opacity 1s)
  opacity: 0
.iso-show
  opacity: 1

#upload-input
  display: block
  width: 100%
  height: 112px
  position: relative
  cursor: pointer
  input#files
    display: block
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    z-index: 2
    opacity: 0.01
    cursor: pointer
  .layer
    display: block
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    z-index: 1
    font-size: 60px
    text-align: center
    line-height: 100px
    color: #999
    border: 1px dashed #ccc
    border-radius: 5px
    cursor: pointer

#counter
  top: 10px
  right: 100px
  width: 160px

.prj-row
  width: 100%
  position: absolute
  top: 0
  left: 0
  .prj-cell
    position absolute
    width: 20%
  img
    width: 98%
    margin: 2%
  .count.btn.btn-fab
    position: absolute
    bottom: 10px
    left: 50%
    margin-left: -45px

@import 'styl/admin'
@import 'styl/menu'
@import 'styl/card'
@import 'styl/popup'
