@import 'styl/vars'
@import 'styl/basic'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  color: #404040
  font-family: Roboto,Helvetica,Arial,sans-serif 
  -webkit-font-smoothing: antialiased

#root
  width: 100%
  padding: 0

#layout
  width: 95%
  margin: 10px 2.5%

#init
  transition(all 0.3s ease-in-out)
  opacity: 1
#init.dim
  z-index: 0
  opacity: 0


